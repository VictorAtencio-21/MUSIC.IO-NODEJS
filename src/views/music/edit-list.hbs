                <div class="form-group">
                    <input type="text" name="name" class="form-control" value="{{list.name}}">
                </div>
                    <button type="submit" class="btn btn-primary btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>